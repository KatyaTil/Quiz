<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Quiz.GamePage">
    <ContentPage.Content >
        <Grid Margin="50">
            <Label x:Name="label" Text="Вопрос" HorizontalTextAlignment="Center" FontSize="25" TextColor="Brown" FontAttributes="Bold" Margin="0,30,0,0"/>
            <Label x:Name="score" Text="Очки:" HorizontalTextAlignment="End" FontSize="20" TextColor="Brown" Margin="0,-7,0,0"/>

            <Image x:Name="img_Flag" Margin="0,0,0,260"></Image>

            <StackLayout x:Name="layout_countries" RadioButtonGroup.GroupName="countries" Margin="0,300,0,0" />

            <Button x:Name="next" VerticalOptions="End" Text="Дальше" Clicked="next_Clicked" IsEnabled="False" BackgroundColor="Brown" TextColor="Beige" Margin="0,300,0,0"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>